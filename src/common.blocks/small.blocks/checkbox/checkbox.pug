mixin checkbox(input_id, input_name, input_label)
    div.checkbox
        input(class= 'check' id= input_id type= 'checkbox' name= input_name value= input_id)
        label(for= input_id)= input_label
mixin checkbox_simple(input_id, input_name)
    input(class= 'check' id=input_id type='checkbox' name=input_name value=input_name)