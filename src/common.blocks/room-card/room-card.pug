include ../small.blocks/rating-stars/rating-stars.pug
mixin room-card(card_id)
    - var images = ['./img/card_picture1.jpg']
    div(class= 'room-card' id= card_id)
        ul(id='lightSlider')
            - for (var i in images)
                li.slide
                    img(src= images[i])
        div(class= 'inform')
            p number
            p sum
            +rating-stars()
            p come-back
