include ../small.blocks/button/button.pug
include ../small.blocks/dropdown/dropdown.pug
include ../small.blocks/label/label.pug
mixin header()
    - var header_options = ['О нас', 'Услуги', 'Вакансии', 'Новости', 'Соглашения']
    header(class= 'header-main')
        +label()
        ul(class='header-main_item')
            each option in header_options
                if (option === 'Услуги')
                    li
                        +drop_down('conditions', option, "_hidden")
                else if (option === 'Соглашения')
                    li
                        +drop_down('docs', option, "_hidden")
                else
                    li
                        a= option
            li
                +button('login', 'LOGIN', '_white')
            li
                +button('registration', 'REGISTER', '_purple')