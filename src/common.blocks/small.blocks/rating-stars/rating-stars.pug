mixin rating-stars()
    div(class="star-rating")
        div(class="star-rating__wrap")
            - for ( let i = 1; i < 6; i++ )
                label(class= "star-rating__ico far fa-star" title= i+" out of "+i+" stars")
                    input(class= "star-rating__input" type="radio" name="rating" value= i)
                    
    